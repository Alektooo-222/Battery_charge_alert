{
    "version": "2.0.0",
    /* "windows": {
        "options": {
            "shell": {
                "executable": "cmd.exe",
                "args": ["/d", "/c"]
            }
        }
    }, */
    "tasks": [
        {
            "type": "shell",
            "label": "CubeProg: Flash project (SWD)",
            "command": "STM32_Programmer_CLI",
            "args": [
                "--connect",
                "port=swd",
                "--download",
                "${command:cmake.launchTargetPath}",
                // Let CMake extension decide executable: "${command:cmake.launchTargetPath}",
                "-hardRst", // Hardware reset - if rst pin is connected
                "-rst", // Software reset (backup)
                "--start" // Start execution
            ],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Build + Flash",
            "dependsOrder": "sequence",
            "dependsOn": [
                "CMake: clean rebuild",
                "CubeProg: Flash project (SWD)",
            ]
        },
                {
            "type": "cmake",
            "label": "CMake: clean rebuild",
            "command": "cleanRebuild",
            "targets": [
                "all"
            ],
            "preset": "${command:cmake.activeBuildPresetName}",
            "group": "build",
            "problemMatcher": [],
            "detail": "CMake template clean rebuild task"
        },
        {
            "type": "shell",
            "label": "CubeProg: List all available communication interfaces",
            "command": "STM32_Programmer_CLI",
            "args": ["--list"],
            "options": {
                "cwd": "${workspaceFolder}"
            },
            "problemMatcher": []
        },
        {
            "label": "Build",
            "group": "build",
            "type": "shell",
            "presentation": {
                "clear": true
            },
            "command": ".vscode/build.ps1",
            "options": {
                "cwd": "${workspaceRoot}",
                "statusbar": {
                    "color" : "#9bffa3",
                    "detail" : "Build sources and subprojects",
                    "label" : "$(gear) Build",
                    "hide" : false
                }
            },
        },
        {
            "label": "Server",
            "group": "build",
            "type": "shell",
            "presentation": {
                "clear": true
            },
            "command": ".vscode/mcuServer.ps1",
            "options": {
                "cwd": "${workspaceRoot}",
                "statusbar": {
                    "color" : "#dfff86",
                    "detail" : "Server start",
                    "label" : "$(rocket) Server",
                    "hide" : false
                }
            },
        },
        {
            "label": "SWO",
            "group": "build",
            "type": "shell",
            "presentation": {
                "clear": true
            },
            "command": "python ${workspaceRoot}/.vscode/swo_parser.py ${config:mcu_server} 2001",
            "options": {
                "cwd": "${workspaceRoot}",
                "statusbar": {
                    "color" : "#ff9af2",
                    "detail" : "SWO trace terminal",
                    "label" : "$(console) SWO",
                    "hide" : false
                }
            },
        },
    ]
}
