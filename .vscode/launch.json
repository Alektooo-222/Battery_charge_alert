{
    // Use IntelliSense to learn about possible attributes.
    // Hover to view descriptions of existing attributes.
    // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Build & Debug Microcontroller - ST-Link",
            "cwd": "${workspaceFolder}",
            "type": "cortex-debug",
            "executable": "${command:cmake.launchTargetPath}",
            // Let CMake extension decide executable: "${command:cmake.launchTargetPath}"
            // Or fixed file path: "${workspaceFolder}/path/to/filename.elf"
            "request": "launch",
            "servertype": "stlink",
            "device": "STM32F103RBTx", //MCU used
            "interface": "swd",
            "serialNumber": "",        //Set ST-Link ID if you use multiple at the same time
            "runToEntryPoint": "main",
            "svdFile": "${config:STM32VSCodeExtension.cubeCLT.path}/STMicroelectronics_CMSIS_SVD/STM32F103.svd",
            "v1": false,               //Change it depending on ST Link version
            "serverpath": "${config:STM32VSCodeExtension.cubeCLT.path}/STLink-gdb-server/bin/ST-LINK_gdbserver",
            "stm32cubeprogrammer":"${config:STM32VSCodeExtension.cubeCLT.path}/STM32CubeProgrammer/bin",
            "stlinkPath": "${config:STM32VSCodeExtension.cubeCLT.path}/STLink-gdb-server/bin/ST-LINK_gdbserver",   
            "armToolchainPath": "${config:STM32VSCodeExtension.cubeCLT.path}/GNU-tools-for-STM32/bin",
            "gdbPath":"${config:STM32VSCodeExtension.cubeCLT.path}/GNU-tools-for-STM32/bin/arm-none-eabi-gdb",            
            "serverArgs": [
                "-m","0",
            ],
            "postLaunchCommands": ["-enable-pretty-printing"],
            //"preLaunchTask": "Build + Flash"
            /* If you use external loader, add additional arguments */
            //"serverArgs": ["--extload", "path/to/ext/loader.stldr"],
        },
        {
            "name": "Attach to Microcontroller - ST-Link",
            "cwd": "${workspaceFolder}",
            "type": "cortex-debug",
            "executable": "${command:cmake.launchTargetPath}",
            // Let CMake extension decide executable: "${command:cmake.launchTargetPath}"
            // Or fixed file path: "${workspaceFolder}/path/to/filename.elf"
            "request": "attach",
            "servertype": "stlink",
            "device": "STM32F103RBTx", //MCU used
            "interface": "swd",
            "serialNumber": "",        //Set ST-Link ID if you use multiple at the same time
            "runToEntryPoint": "main",
            "svdFile": "${config:STM32VSCodeExtension.cubeCLT.path}/STMicroelectronics_CMSIS_SVD/STM32F103.svd",
            "v1": false,               //Change it depending on ST Link version
            "serverpath": "${config:STM32VSCodeExtension.cubeCLT.path}/STLink-gdb-server/bin/ST-LINK_gdbserver",
            "stm32cubeprogrammer":"${config:STM32VSCodeExtension.cubeCLT.path}/STM32CubeProgrammer/bin",
            "stlinkPath": "${config:STM32VSCodeExtension.cubeCLT.path}/STLink-gdb-server/bin/ST-LINK_gdbserver",   
            "armToolchainPath": "${config:STM32VSCodeExtension.cubeCLT.path}/GNU-tools-for-STM32/bin",
            "gdbPath":"${config:STM32VSCodeExtension.cubeCLT.path}/GNU-tools-for-STM32/bin/arm-none-eabi-gdb",            
            "serverArgs": [
                "-m","0",
            ],
            /* If you use external loader, add additional arguments */
            //"serverArgs": ["--extload", "path/to/ext/loader.stldr"],
        },
        {
			"name": "openocd",
			"type": "cortex-debug",
			"request": "launch",
			"cwd": "${workspaceRoot}",
			"servertype": "openocd",
			"executable": "./build/Debug/UART_1.elf",
			"svdFile": "${config:STM32VSCodeExtension.cubeCLT.path}/STMicroelectronics_CMSIS_SVD/STM32F103.svd",
			"configFiles": [
				"D:/OpenOCD-20240916-0.12.0/share/openocd/scripts/interface/stlink.cfg", //"//cmsis-dap.cfg", //stlink.cfg
				"D:/OpenOCD-20240916-0.12.0/share/openocd/scripts/target/stm32f1x.cfg"
			],
            "runToEntryPoint": "main",
			//"preLaunchTask": "Build"
            //CMake: clean rebuild
            //"preLaunchTask": "CMake: clean rebuild"
		},
        {
            "name": "st-link local",
            "cwd": "${workspaceRoot}",
            "executable": "./build/Debug/UART_1.elf",
            "request": "launch",
            "type": "cortex-debug",
            // "runToEntryPoint": "main",
            "servertype": "openocd",
            "serverpath": "openocd.exe",
            "device": "STM32F103RBTx",
            "interface": "swd",
            "configFiles": [
                "interface/stlink.cfg",
                // "target/ch32f1x.cfg",    // For GD32F103
                "target/stm32f1x.cfg"
            ],
            "svdFile": "${config:STM32VSCodeExtension.cubeCLT.path}/STMicroelectronics_CMSIS_SVD/STM32F103.svd",
            "showDevDebugOutput": "none",
            "swoConfig":{
                "enabled":true,
                "source":"probe",
                "swoFrequency": 2250000,
                "cpuFrequency":72000000,
                "decoders": [
                    {
                        "port": 0,
                        "label": "Info",
                        "type": "console",
                        "encoding":"ascii",
                        "showOnStartup": true,
                        "timestamp": true,
                    },
                    {
                        "port": 1,
                        "label": "Warnings",
                        "type": "console",
                        "encoding":"ascii",
                        "showOnStartup": true,
                        "timestamp": true,
                    },
                    {
                        "port": 2,
                        "label": "Errors",
                        "type": "console",
                        "encoding":"ascii",
                        "showOnStartup": true,
                        "timestamp": true,
                    },
                    {
                        "port": 3,
                        "type": "graph",
                        "encoding":"signed",
                        "graphId": "1",
                        "scale": 1,
                    },
                    {
                        "port": 4,
                        "type": "graph",
                        "encoding":"signed",
                        "graphId": "2",
                        "scale": 1,
                    },
                    {
                        "port": 5,
                        "type": "graph",
                        "encoding":"signed",
                        "graphId": "3",
                        "scale": 1,
                    },
                ]
            },
            "graphConfig": [
                {
                    "label": "CPU time",
                    "timespan": 30,
                    "type": "realtime",
                    "annotate": false,
                    "maximum": 4096,
                    "minimum": 0,
                    "plots": [
                        {
                            "graphId": "1",
                            "label": "sin(x)",
                            "color": "#FF00FF"
                        },
                        {
                            "graphId": "2",
                            "label": "cos(x)",
                            "color": "#00FFFF"
                        },
                        {
                            "graphId": "3",
                            "label": "random",
                            "color": "#FFFF00"
                        },
                    ]
                },
            ],
            "openOCDLaunchCommands": [
                "adapter speed 4000",
                "reset_config srst_only srst_nogate connect_assert_srst",
                "set CONNECT_UNDER_RESET 1",
                // "adapter srst pulse_width 1",
                // "set CORE_RESET 1",
            ],
            "postLaunchCommands": ["-enable-pretty-printing"],
            //"preLaunchTask": "Build",
        },
        {
            "name": "st-link remote",
            "cwd": "${workspaceRoot}",
            "executable": "./build/Debug/UART_1.elf",
            "request": "launch",
            "type": "cortex-debug",
            // "runToEntryPoint": "main",
            "servertype": "external",
            "gdbTarget": "${config:mcu_server}:2000",
            "serverpath": "openocd.exe",
            "device": "STM32F103RBTx",
            "interface": "swd",
            "svdFile": "${config:STM32VSCodeExtension.cubeCLT.path}/STMicroelectronics_CMSIS_SVD/STM32F103.svd",
            "showDevDebugOutput": "none",
            //"preLaunchTask": "Build",
        },
            ]
}